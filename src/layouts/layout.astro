---
import pkg from '../../package.json' assert { type: 'json' }
import { user } from '@lib/stores'
import { supabase, isUser } from '@lib/supabase'
import Header from '@components/Header.svelte'
import Sidebar from '@components/Sidebar.svelte'

const version = pkg.version
const path = new URL(Astro.url, Astro.site).pathname
const { title, padding } = Astro.props
const { data, error } = await supabase.auth.getSession()

user.set(isUser(Astro.cookies) && data.session ? data.session.user : null) // resets user store when cookies are missing
---

<html lang='cs'>
	<head>
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width' />

    <link rel='preconnect' href='https://fonts.googleapis.com'>
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin>
    <link href='https://fonts.googleapis.com/css2?family=Alegreya:ital,wght@0,400;0,900;1,400;1,900&display=swap' rel='stylesheet'>
    <link rel='icon' href='/favicon.png' type='image/png' />
    <link rel='stylesheet' href='/obsidian.css'>

    <title>Andor2.cz â€• {title}</title>
  </head>
	<body>
    <div id='wrapper'>
      <main>
        <Header path={path} />
        <div id='content' style={{ padding }}">
          <slot />
        </div>
      </main>
      <Sidebar />
    </div>
    <footer>v{version}</footer>
  </body>
</html>

<style>
  body {
    margin: 20px;
    margin-top: 0px;
  }

  #wrapper {
    width: 100%;
    margin: auto;
    display: flex;
  }

  main {
    flex: 1;
    background-color: var(--panel);
    border-radius: 0px 0px 5px 5px;
  }

  footer {
    margin-top: 20px;
    padding: 20px;
    text-align: center;
  }
</style>