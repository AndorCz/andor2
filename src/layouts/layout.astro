---
import { ViewTransitions } from 'astro:transitions'
import pkg from '../../package.json' assert { type: 'json' }
import Header from '@components/Header.svelte'
import Sidebar from '@components/sidebar/Sidebar.svelte'
import Store from '@components/common/Store.svelte'
import 'tippy.js/dist/tippy.css'

const { version } = pkg
const { pathname } = new URL(Astro.url, Astro.site)
const { user } = Astro.locals
const { title, headerStatic, headerStorage } = Astro.props
---

<html lang='cs'>
	<head>
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width' />
    <meta name='description' content='Andor2.cz ― Dračí Doupě online, TTRPG, VTT, RPG hry online, Dungeons & Dragons, D&D, DnD, Vampire, Call of Cthulhu, Pathfinder, Shadowrun, Cyberpunk, Fate, Star Wars, Warhammer, Pán Prstenů' />

    <link rel='preconnect' href='https://fonts.googleapis.com'>
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin>
    <link rel='preload' as='style' href='https://fonts.googleapis.com/css2?family=Alegreya:ital,wght@0,400;0,900;1,400;1,900&display=swap' rel='stylesheet' onload="this.onload=null; this.rel='stylesheet'">
    <link rel='icon' href='/favicon.png' type='image/png' />
    <link rel='stylesheet' href={'/obsidian.css?v=' + version}>
    
    <!-- game fonts -->
    <link href='https://fonts.googleapis.com/css2?family=Caveat:wght@400..700&family=Inter:wght@100..900&display=swap' rel='stylesheet'>
    <link href='https://fonts.googleapis.com/css2?family=Caveat:wght@400..700&family=Inter:wght@100..900&family=Orbitron:wght@400..900&display=swap' rel="stylesheet">

    <script src='https://www.google.com/recaptcha/api.js?render=6LeGwKwpAAAAAPUzv6wpjauCabPEZp4YX8lfCivG' defer></script>

    <ViewTransitions />
    <title>Andor2.cz ― {title}</title>
  </head>
	<body>
    <div id='wrapper'>
      <main>
        <Header {pathname} {headerStatic} {headerStorage} client:only />
        <div id='content'>
          <slot />
        </div>
        <footer><a href='https://github.com/EskelCz/andor2' target='_blank'>v{version}</a></footer>
      </main>
      <Sidebar {user} client:only />
    </div>
  </body>
</html>

<style>
  body {
    margin: 20px;
    margin-top: 0px;
  }

  #wrapper {
    max-width: 1400px;
    margin: auto;
    display: flex;
  }

    main {
      flex: 1;
    }

      #content {
        padding: 40px 60px 60px 60px;
        background-color: var(--panel);
        border-radius: 0px 0px 10px 10px;
      }

    footer {
      margin-top: 20px;
      padding: 20px;
      text-align: center;
    }

  @media (max-width: 1200px) {
    #content {
      padding: 20px 30px 30px 30px;
    }
  }

  @media (max-width: 860px) {
    body {
      margin: 0px;
    }
    main {
      border-radius: 0px;
    }
      #content {
        padding: 15px;
        padding-bottom: 50px;
        min-height: 550px;
      }
  }
</style>
